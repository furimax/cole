<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.colegio.agenda.estudiante.ui.fragmentos.UpdateFragment">

    <!-- Titulo-->
    <EditText
        android:id="@+id/actividad_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:hint="Nombre Estudiante"
        android:maxLength="55"
        android:maxLines="1"
        android:minLines="1"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:phoneNumber="false"
        android:singleLine="true" />

    <!-- Descripción -->
    <EditText
        android:id="@+id/detalle_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actividad_input"
        android:layout_centerHorizontal="true"
        android:hint="Apellido de Estudiante"
        android:maxLength="128"
        android:nestedScrollingEnabled="true"
        android:paddingBottom="16dp"
        android:paddingTop="16dp" />

    <!-- Etiqueta Fecha -->
    <TextView
        android:id="@+id/fecha_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detalle_input"
        android:paddingTop="16dp"
        android:text="Promedio"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />

    <!-- Fecha -->


    <!-- Categoría -->
    <Spinner
        android:id="@+id/curso_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoria_texto"
        android:entries="@array/entradas_cursos" />

    <TextView
        android:id="@+id/n1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fecha_text"
        android:text="00000"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/promedio_ejemplo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fecha_text"
        android:text="00000"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <!-- Etiqueta Categoría -->
    <TextView
        android:id="@+id/categoria_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/promedio_ejemplo"
        android:paddingTop="16dp"
        android:text="Curso"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />

    <!-- Etiqueta Prioridad -->

    <!-- Prioridad -->

</RelativeLayout>
